<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnsLinear"
        android:layout_centerHorizontal="true"
        android:text="Выберите режим"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <LinearLayout
        android:id="@+id/btnsLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Players Fight"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/offlineGameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/choice_button"
            android:text="Оффлайн"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/onlineGameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/choice_button"
            android:text="Онлайн"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fight vs Bot"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/easyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/easy"
            android:textAllCaps="false"
            android:background="@drawable/choice_button"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/normalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normal"
            android:textAllCaps="false"
            android:background="@drawable/choice_button"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/hardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hard"
            android:textAllCaps="false"
            android:background="@drawable/choice_button"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"/>

    </LinearLayout>

</RelativeLayout>