<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/playerLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Игрок: "
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/player_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/difficultyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/playerLinear"
            android:layout_toStartOf="@id/botLinear"
            android:textAlignment="center"
            tools:text="Невозможно"
            android:textSize="24sp"/>

        <LinearLayout
            android:id="@+id/botLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бот: "
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/bot_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/game">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cell0"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <ImageView
                android:id="@+id/cell1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/cell2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/cell3"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <ImageView
                android:id="@+id/cell4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/cell5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/cell6"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <ImageView
                android:id="@+id/cell7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/cell8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#FFE6E6E6"
        android:src="@drawable/ic_reload"/>

</RelativeLayout>